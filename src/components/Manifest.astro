---
import { Shield } from "@lucide/astro";
const cards = [
  {
    icon: Shield,
    title: "Built to Last",
    desc: "Websites made with clean code, strong performance, and scalability in mind. They serve your business for years, not months.",
  },
];
---

<div class="flex flex-col mx-auto max-w-7xl px-3 md:px-6 lg:px-8 items-center">
  <section
    id="HowIWork"
    class="flex flex-col w-full items-center border-x border-white-line/40"
  >
    <header
      class="flex w-full mt-16 md:mt-24 lg:mt-32 py-12 px-6 md:p-16 lg:p-24 border-y border-white-line/40"
    >
      <h2
        class="mx-auto font-bold text-3xl lg:text-5xl xl:text-6xl text-center text-shadow-header-black"
      >
        Core Values. Manifest
      </h2>
    </header>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grids-cols-3 w-full mb-16 md:mb-24 lg:mb-32 border-b border-white-line/40"
    >
      {
        cards.map((c) => (
          <article class={`flex flex-col p-4 lg:p-6 gap-4 xl:gap-6`}>
            <c.icon />
            <h3 class={`font-bold text-2xl lg:text-3xl xl:text-4xl`}>
              {c.title}
            </h3>
            <p class={`italic xl:text-xl`}>{c.desc}</p>
          </article>
        ))
      }
    </div>
  </section>
</div>
