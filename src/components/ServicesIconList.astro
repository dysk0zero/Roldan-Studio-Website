---
export type IconComponent = (props: Record<string, any>) => any;

export type IconText = {
  icon: IconComponent;
  text: string;
};

interface Props {
  items: IconText[];
  class?: string;
}

const { items = [], class: className = '' } = Astro.props as Props;
---

{
  items.length > 0 && (
    <ul role="list" class={`flex flex-col gap-3 ${className}`}>
      {items.map(({ icon: Icon, text }) => (
        <li class="flex items-center gap-3">
          <Icon class="w-5 h-5 shrink-0" />
          <span>{text}</span>
        </li>
      ))}
    </ul>
  )
}
