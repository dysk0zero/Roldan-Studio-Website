---
import { ArrowRight } from "@lucide/astro";

const { t } = Astro.props;
---

<div class="section-wrapper dark-bg">
  <section id="Contact" class="flex w-full border-x border-white-line">
    <div
      class="section-margin-top section-margin-bottom flex flex-col lg:flex-row w-full lg:items-start"
    >
      <header class="flex justify-center py-16 px-6 md:p-16 w-full">
        <h2
          class="font-bold text-3xl lg:text-5xl xl:text-6xl text-shadow-header-black leading-tight"
        >
          {t.title}
        </h2>
      </header>
      <form
        id="contact-form"
        method="POST"
        action="https://formspree.io/f/meolypyv"
        accept-charset="UTF-8"
        class="flex flex-col w-full lg:max-w-xl lg:border-l border-white-line"
      >
        <label for="name" class="sr-only">{t.form.name}</label>
        <input
          id="name"
          name="name"
          type="text"
          autocomplete="name"
          autocapitalize="words"
          spellcheck="false"
          placeholder={t.form.name}
          class="xl:text-xl p-4 border-b border-t border-white-line"
          required
        />
        <label for="email" class="sr-only">{t.form.email}</label>
        <input
          id="email"
          name="email"
          type="email"
          autocomplete="email"
          autocapitalize="none"
          spellcheck="false"
          placeholder={t.form.email}
          class="xl:text-xl p-4 border-b border-white-line"
          required
        />
        <label for="message" class="sr-only">{t.form.message}</label>
        <textarea
          id="message"
          name="message"
          autocomplete="on"
          autocapitalize="sentences"
          spellcheck="true"
          rows="8"
          maxlength="1000"
          placeholder={t.form.message}
          class="xl:text-xl h-64 p-4 border-b border-white-line"
          required></textarea>

        <button
          type="submit"
          id="submit"
          class="flex justify-between cursor-pointer p-4 border-b border-white-line hover:bg-white/5 active:bg-white/10"
        >
          <span class="font-medium xl:text-xl">{t.form.cta}</span>
          <ArrowRight class="w-6 h-6" aria-hidden="true" />
        </button>
      </form>
    </div>
  </section>
</div>
