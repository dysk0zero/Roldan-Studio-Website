---
import LanguageToggle from "./LanguageToggle.astro";
import Navigation from "./Navigation.astro";

const { t } = Astro.props;
---

<aside class="flex flex-col justify-center items-center gap-6 mt-24">
  <LanguageToggle classItem="hover:text-hover-nav text-base active:text-hover-nav" />
  <Navigation t={t.nav} classNav="flex" classList="text-center text-lg" classItem="hover:text-hover-nav active:text-hover-nav" />
</aside>
