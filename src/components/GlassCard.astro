---
interface Props {
  id: string;
  title: string;
  desc: string;
  colorBack: string;
  colorMiddle: string;
  gradientFront: string;
}

const { id, title, desc, colorBack, colorMiddle, gradientFront } = Astro.props as Props;
---

<article class={"flex flex-col p-4 md:border-l border-white-line"}>
  <p class="hidden p-4 text-sm">{id}</p>
  <div
    class="relative flex flex-col h-full p-3 xl:p-4 pb-6 xl:pb-7 pr-4 xl:pr-5 gap-2 xl:gap-3"
  >
    <div class="absolute inset-0">
      <div
        class="absolute top-3 left-3 bottom-0 right-0 rounded-xl"
        style={{ backgroundColor: colorBack }}
      >
      </div>
      <div
        class="absolute top-0 left-0 bottom-2 right-2 rounded-xl backdrop-blur-sm"
        style={{ backgroundColor: colorMiddle }}
      >
      </div>
      <div
        class="absolute top-1.5 left-1.5 bottom-1 right-1 rounded-xl"
        style={{ background: gradientFront }}
      >
      </div>
    </div>
    <header>
      <h2 class="relative font-bold text-2xl xl:text-3xl z-10">
        {title}
      </h2>
    </header>
    <p class="relative font-medium xl:text-lg z-10">{desc}</p>
  </div>
</article>
