---
import { Image } from "astro:assets";
import pfp from "../assets/images/pfp.avif";
import { ArrowRight } from "@lucide/astro";

const { t } = Astro.props;
---

<div class="section-wrapper">
  <section
    id="Hero"
    class="dark-bg flex flex-col md:flex-row-reverse w-full
         min-h-[calc(100svh-96px)]
         md:min-h-[500px]
         lg:min-h-[calc(100svh-64px)]
         overflow-auto items-center md:items-stretch
         px-6 md:px-12 md:py-24 lg:px-24
         lg:justify-evenly lg:items-center
         border-x border-t border-white-line"
  >
    <div
      data-animate-right
      data-duration="0.3"
      class="opacity-0 relative
      max-w-[200px] max-h-[200px] md:max-w-[250px] md:max-h-[250px] lg:max-w-[280px] lg:max-h-[280px] xl:max-w-[300px] xl:max-h-[300px]
      m-8 md:mt-[0] lg:mt-[-96px] xl:mt-[-160px]
      text-white-line"
    >
      <Image
        src={pfp}
        alt="Javier's profile picture"
        format="avif"
        loading="eager"
        fetchpriority="high"
        height="300"
        width="300"
      />
      <div class="pointer-events-none absolute inset-0 bg-black/15"></div>
      <svg viewBox="0 0 400 400" class="absolute inset-0" aria-hidden="true">
        <circle
          cx="200"
          cy="200"
          r="198"
          class="fill-none stroke-current stroke-[2] lg:stroke-[4]"
          vector-effect="non-scaling-stroke"></circle>
      </svg>
    </div>

    <div
      class="contents md:flex md:flex-col
      md:gap-32 lg:gap-40 xl:gap-48
      lg:py-4
      items-start"
    >
      <div
        data-animate-left
        data-duration="0.3"
        class="opacity-0 flex flex-col gap-3 md:gap-4 lg:gap-5 xl:gap-6 max-w-xl xl:max-w-2xl items-start"
      >
        <h1
          class="font-bold text-4xl lg:text-6xl xl:text-[54px] text-shadow-teal"
        >
          {t.title}
        </h1>
        <h2
          class="font-medium text-2xl lg:text-3xl xl:text-4xl leading-snug text-shadow-teal"
        >
          {t.subtitle}
        </h2>
      </div>
      <div
        data-animate-left
        data-duration="0.3"
        class="opacity-0 flex w-full items-center justify-center md:justify-start py-8 md:p-0 lg:py-4 flex-1 md:flex-none"
      >
        <a
          href="#Services"
          class="group flex gap-2 items-center text-white hover:text-offwhite hover:text-shadow-CTA hover:drop-shadow-CTA active:text-white-blue whitespace-nowrap"
        >
          <span class="font-bold text-3xl lg:text-5xl">{t.cta}</span>
          <ArrowRight
            class="h-8 w-8 lg:h-10 lg:w-10 stroke-3 xl:stroke-[3.5] transition-transform duration-300 group-hover:translate-x-1"
          />
        </a>
      </div>
    </div>
  </section>
</div>
