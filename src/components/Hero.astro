---
import { Image } from "astro:assets";
import pfp from "../assets/images/pfp.avif";
import { ArrowRight } from "@lucide/astro";
---

<div class="section-wrapper">
  <section
    id="Hero"
    class="dark-bg flex flex-col md:flex-row-reverse w-full
         min-h-[calc(100svh-96px)]
         md:min-h-[500px]
         lg:min-h-[calc(100svh-64px)]
         overflow-auto items-center md:items-stretch
         px-6 md:px-12 md:py-24 lg:px-24
         lg:justify-evenly lg:items-center
         border-x border-t border-white-line"
  >
    <div
      class="relative max-w-[200px] max-h-[200px] md:max-w-[250px] md:max-h-[250px] lg:max-w-[280px] lg:max-h-[280px] xl:max-w-[300px] xl:max-h-[300px] mb-8 mx-8 md:mt-[-12px] lg:mt-[-48px] xl:mt-[-96px] text-white-line"
    >
      <Image
        src={pfp}
        alt="Javier's profile picture"
        width={400}
        height={400}
        loading="eager"
      />
      <div class="pointer-events-none absolute inset-0 bg-black/15"></div>
  <svg
    x-data="{
      isLg: window.matchMedia('(min-width: 1024px)').matches,
      init() {
        const mq = window.matchMedia('(min-width: 1024px)');
        this.isLg = mq.matches;
        mq.addEventListener('change', (e) => this.isLg = e.matches);
      }
    }"
    viewBox="0 0 400 400"
    class="absolute inset-0"
    aria-hidden="true"
  >
    <circle
      cx="200"
      cy="200"
      :r="isLg ? 197 : 198"
      :class="isLg ? 'stroke-[4]' : 'stroke-[2]'"
      fill="none"
      stroke="currentColor"
      vector-effect="non-scaling-stroke"
    />
  </svg>
    </div>

    <div
      class="contents md:flex md:flex-col
      md:gap-32 lg:gap-40 xl:gap-60
      lg:py-4
      items-start"
    >
      <div class="flex flex-col gap-3 md:gap-4 lg:gap-5 xl:gap-6 max-w-xl xl:max-w-2xl items-start">
        <h1 class="font-bold text-4xl lg:text-6xl xl:text-[54px] text-shadow-teal">
          Hi! I'm Javi
        </h1>
        <h2 class="font-medium text-2xl lg:text-3xl xl:text-4xl text-shadow-teal">
          As a developer & designer, I build custom websites for people.
        </h2>
      </div>
      <div
        class="flex w-full items-center justify-center md:justify-start py-8 md:p-0 lg:py-4 flex-1 md:flex-none"
      >
        <a
          href="#Services"
          class="flex gap-2 items-center text-white hover:text-offwhite hover:text-shadow-CTA hover:drop-shadow-CTA active:text-white-blue whitespace-nowrap"
        >
          <span class="font-bold text-3xl lg:text-5xl">Start a Project</span>
          <ArrowRight class="h-8 w-8 lg:h-10 lg:w-10 stroke-3 xl:stroke-[3.5]" />
        </a>
      </div>
    </div>
  </section>
</div>
