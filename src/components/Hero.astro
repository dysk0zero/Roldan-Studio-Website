---
import pfp from "../assets/images/pfp.avif";
import HeroImage from "./HeroImage.astro";
import CTA from "./CTA.astro";

const { t } = Astro.props;
---

<div class="section-wrapper">
  <section id="Hero" class="dark-bg border-x border-t border-white-line">
    <HeroImage
      wrapperClass="wrapperImage"
      image={pfp}
      description={t.altImage}
      format="avif"
      loading="eager"
      fetchpriority="high"
      widths={[200, 250, 280, 300]}
      sizes="(min-width:1440px) 300px,(min-width:1024px) 280px,(min-width:768px) 250px, 200px"
    />
    <div
      class="contents md:flex md:flex-col items-start
      md:gap-32 lg:gap-40 xl:gap-48 lg:py-4"
    >
      <div
        data-animate-left
        data-duration="0.3"
        class="opacity-0 flex flex-col gap-3 md:gap-4 lg:gap-5 xl:gap-6 max-w-xl xl:max-w-2xl items-start"
      >
        <h1
          class="font-bold text-4xl lg:text-6xl xl:text-[54px] text-shadow-teal"
        >
          {t.title}
        </h1>
        <h2
          class="font-medium text-2xl lg:text-3xl xl:text-4xl leading-snug text-shadow-teal"
        >
          {t.subtitle}
        </h2>
      </div>
      <div
        data-animate-left
        data-duration="0.3"
        class="opacity-0 flex w-full items-center justify-center md:justify-start py-8 md:p-0 lg:py-4 flex-1 md:flex-none"
      >
        <CTA
          text={t.cta}
          link="#Services"
          class="hover:text-shadow-CTA hover:drop-shadow-CTA"
          textClass="font-bold text-3xl lg:text-5xl"
          iconSizeClass="h-8 w-8 lg:h-10 lg:w-10"
          iconStrokeClass="stroke-3 xl:stroke-[3.5]"
        />
      </div>
    </div>
  </section>
</div>

<style>
  @reference "../styles/global.css";
  section {
    @apply flex flex-col md:flex-row-reverse w-full
    min-h-[calc(100svh-96px)] md:min-h-[500px] lg:min-h-[calc(100svh-64px)]
    overflow-auto items-center md:items-stretch lg:justify-evenly lg:items-center
    px-6 md:px-12 md:py-24 lg:px-24;
  }
  :global(.wrapperImage) {
    @apply max-w-[200px] max-h-[200px] md:max-w-[250px] md:max-h-[250px] 
    lg:max-w-[280px] lg:max-h-[280px] xl:max-w-[300px] xl:max-h-[300px] 
    m-8 md:mt-[0] lg:mt-[-96px] xl:mt-[-160px];
  }
</style>
