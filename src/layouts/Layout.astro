---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ObserverProvider from "../components/ObserverProvider";
import HeaderThemeWatcher from "../components/ObserverHeader";
import "../styles/global.css";
import { Schema } from "astro-seo-schema";

const { t } = Astro.props;

const site = {
  name: "Roldan Studio",
  url: "https://jbroldan.dev/en",
  logo: "https://jbroldan.dev/favicon.svg",
  description:
    "Portfolio of Javi Roldan â€” Web Developer & Designer focused on fast, accessible websites.",
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg" href="/favicon.svg" />
    <title>{t.title}</title>
    <meta name="description" content={t.description} />
    <meta name="color-scheme" content="dark" />
    <link rel="canonical" href={t.url} />
    <link rel="alternate" hreflang="en" href="https://jbroldan.dev/en" />
    <link rel="alternate" hreflang="es" href="https://jbroldan.dev/es" />
    <link rel="alternate" hreflang="de" href="https://jbroldan.dev/de" />

    <Schema
      item={{
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: 'Javi B. Roldan',
        alternateName: 'Roldan Studio',
        url: 'https://jbroldan.dev/en',
        image: 'https://jbroldan.dev/favicon.svg',
        jobTitle: 'Web Developer & Designer',
        worksFor: {
          '@type': 'Organization',
          name: 'Roldan Studio',
          url: 'https://jbroldan.dev'
        },
        sameAs: [
          'https://github.com/dysk0zero',
          'https://www.linkedin.com/in/jbroldan'
        ],
        knowsAbout: [
          'Web Development',
          'UI/UX Design',
          'Astro',
          'Performance Optimization',
          'SEO'
        ],
        alumniOf: ['Physics']
      }}
    />

  </head>
  <body class="text-white">
    <Header t={t.header} />
    <HeaderThemeWatcher client:idle />
    <ObserverProvider client:idle>
      <main class="flex flex-col items-center">
        <slot />
      </main>
    </ObserverProvider>
    <Footer />
  </body>
</html>
