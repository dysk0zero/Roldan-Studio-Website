---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ObserverProvider from "../components/ObserverProvider";
import HeaderThemeWatcher from "../components/ObserverHeader";
import "../styles/global.css";
import { Schema } from "astro-seo-schema";

const { t } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg" href="/favicon.svg" />
    <title>{t.title}</title>
    <meta property="og:site_name" content="Roldan Studio">
    <meta name="application-name" content="Roldan Studio">
    <meta name="description" content={t.description} />
    <meta name="color-scheme" content="dark" />
    <link rel="canonical" href={t.url} />
    <link rel="alternate" hreflang="en" href="https://jbroldan.dev/en" />
    <link rel="alternate" hreflang="es" href="https://jbroldan.dev/es" />
    <link rel="alternate" hreflang="de" href="https://jbroldan.dev/de" />

    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "Organization",
        name: "Roldan Studio",
        alternateName: "Javi B. Roldan",
        url: "https://jbroldan.dev/en",
        logo: "https://jbroldan.dev/favicon.svg",
        founder: {
          "@type": "Person",
          name: "Javi B. Roldan",
          jobTitle: "Web Developer & Designer",
          sameAs: [
            "https://github.com/dysk0zero",
            "https://www.linkedin.com/in/jbroldan",
          ],
        },
        description:
          "Roldan Studio is a web development and design studio by Javi B. Roldan, focused on high-performance websites, UI/UX design, and modern front-end technologies.",
        knowsAbout: [
          "Web Development",
          "UI/UX Design",
          "SEO",
        ],
      }}
    />
  </head>
  <body class="text-white">
    <Header t={t.header} />
    <HeaderThemeWatcher client:idle />
    <ObserverProvider client:idle>
      <main class="flex flex-col items-center">
        <slot />
      </main>
    </ObserverProvider>
    <Footer />
  </body>
</html>
